<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/fountain_blue"
        android:layout_marginVertical="3dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/mainContainer_indicator_cornerRadius">

        <TextSwitcher
            android:id="@+id/pageNumberTextSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="1" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/minusBtn"
        style="@style/defaultFab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/mainContainer_minusBtn_contentDescription"
        android:src="@drawable/minus"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plusBtn"
        style="@style/defaultFab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:contentDescription="@string/mainContainer_plusBtn_contentDescription"
        android:src="@drawable/plus" />

</merge>